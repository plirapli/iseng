html 
  body
    h1 Daftar Produk:
    a(href=`/kategori/${product.CategoryID}`) Kembali
    a(href=`/`, style="margin-left: 2rem") Cart
    br
    br
    form(action="/proses-cart", method="POST")
      table 
        tr 
          td Product ID
          td :
          td
            input(
              name="productID", 
              value=`${product.ProductID}`,
              readonly,
              style="border: none; outline: none; width: 2rem"
            ) 
        tr 
          td Product Name
          td :
          td #{product.ProductName} 
        tr 
          td Supplier
          td :
          td #{product.CompanyName} 
        tr 
          td Category
          td :
          td #{product.CategoryName}
        tr 
          td Qty per Unit
          td :
          td #{product.QuantityPerUnit}
        tr 
          td Unit Price
          td :
          td #{product.UnitPrice}
        tr 
          td Units in Stock
          td :
          td #{product.UnitsInStock}
        tr 
          td Units on Order
          td :
          td #{product.UnitsOnOrder}
        tr 
          td ReorderLevel
          td :
          td #{product.ReorderLevel}
        tr 
          td Discontinued
          td :
          td #{product.Discontinued ? 'Yes' : 'No'}
        tr 
          td Jumlah
          td :
          td
            input(type="number", id="inputQty", name="qty", style="width: fit-content") 
        tr 
          td(colspan="3")
            button(type="submit", value="sendToCart") Beli